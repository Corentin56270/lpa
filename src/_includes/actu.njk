---
layout: 'base.njk'
---

<main class="container contact-page">
    <section class="actualite" id="actualite">
        <header class="actualite-header">
            <h2>{{ title }}</h2>
        </header>
        <div id="pres" class="pres">
            <div class="actu-meta">
                <span class="actu-author">Par <strong>{{ author }}</strong></span>
                <time datetime="{{ date | postDateIso }}">{{ date | postDate }}</time>
            </div>
            <figure class="actu-figure">
                <a href="{{ image }}" target="_blank" rel="noopener">
                    <img src="{{ image }}" alt="{{ imageAlt }}">
                </a>
            </figure>
        </div>

        <div class="actu-content">
            {{ content | safe }}
        </div>
        <br>
        {% if pdf %}
        <div class="actu-download">
            <a class="btn actu-download-btn" href="{{ pdf }}" target="_blank" rel="noopener">
                Voir le PDF
            </a>
        </div>
        {% endif %}
    </section>
</main>